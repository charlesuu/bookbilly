{{>layout/header}}

<h1>게시글 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">유저 번호</label>
                <input type="text" class="form-control" id="id" value="{{user.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="name">이름</label>
                <input type="text" class="form-control" id="name" value="{{user.name}}" readonly>
            </div>
            <div class="form-group">
                <label for="book-name"> 책 이름 </label>
                <input type="text" class="form-control" id="book-name" placeholder="대출 또는 반납할 책 이름(띄어쓰기 없이 입력할 것)">
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-loan">대출하기</button>
        <button type="button" class="btn btn-danger" id="btn-return">반납하기</button>
    </div>
</div>

{{>layout/footer}}